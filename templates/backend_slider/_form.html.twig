{{ form_start(form) }}
    <div class="row form-group">
        <div class="col-12 mt-3">{{ form_row(form.titre) }}</div>
        <div class="col-12 mt-3">{{ form_row(form.description) }}</div>
        <div class="col-12 mt-3">{{ form_row(form.lien) }}</div>
        <div class="col-12 mt-3">{{ form_row(form.media) }}</div>
        {% if slider.media %}
            <div class="col-12 mt-3">
                <img src="{{ asset('uploads/slide/' ~ slider.media) }}" alt="{{ slider.titre }}" class="img-fluid">
            </div>
        {% endif %}
        <div class="col-12 mt-3">
            <div class="custom-control custom-checkbox">
                {{ form_widget(form.statut) }}
                {{ form_label(form.statut) }}
            </div>
            {{ form_errors(form.statut) }}
        </div>
    </div>
    {{ form_widget(form) }}
    <div class="text-right mt-5">
        <a href="{{ path('app_backend_slider_index') }}" class="btn btn-outline-secondary">Annuler</a>
        <button class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
    </div>
{{ form_end(form) }}

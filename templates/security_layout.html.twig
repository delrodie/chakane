<!DOCTYPE html>
<html lang="fr">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
	<title>{% block title %}Security::{% endblock %}</title>
	<link rel="apple-touch-icon" sizes="180x180" href="{{ asset('assets/img/apple-touch-icon.png') }}">
	<link rel="icon" type="image/png" sizes="32x32" href="{{ asset('assets/img/favicon-32x32.png') }}">
	<link rel="icon" type="image/png" sizes="16x16" href="{{ absolute_url(asset('assets/img/favicon-16x16.png')) }}">
	<link rel="icon" href="{{ asset('assets/img/favicon.ico') }}">
	<link rel="manifest" href="{{ asset('assets/img/site.webmanifest') }}">
	{% block stylesheets %}
		<link rel="stylesheet" href="{{ absolute_url(asset('backoffice/assets/css/bootstrap.min.css')) }}">
		<link rel="stylesheet" href="{{ absolute_url(asset('backoffice/assets/plugins/fontawesome/css/fontawesome.min.css')) }}">
		<link rel="stylesheet" href="{{ absolute_url(asset('backoffice/assets/plugins/fontawesome/css/all.min.css')) }}">
		<link rel="stylesheet" href="{{ absolute_url(asset('backoffice/assets/css/feathericon.min.css')) }}">
		<link rel="stylesheet" href="{{ absolute_url(asset('backoffice/assets/plugins/morris/morris.css')) }}">
		<link rel="stylesheet" href="{{ absolute_url(asset('backoffice/assets/css/style.css')) }}">
	{% endblock %}
</head>

<body>
	<div class="main-wrapper login-body">
		<div class="login-wrapper">
			<div class="container">
				<div class="loginbox">
					<div class="login-left"> <img class="img-fluid" src="{{ asset('assets/img/logo_black.png') }}" alt="Logo"> </div>
					<div class="login-right">
						{% block body %}{% endblock %}
					</div>
				</div>
			</div>
		</div>
	</div>

	{% block javascripts %}
		<script src="{{ absolute_url(asset('backoffice/assets/js/jquery-3.5.1.min.js')) }}"></script>
		<script src="{{ absolute_url(asset('backoffice/assets/js/popper.min.js')) }}"></script>
		<script src="{{ absolute_url(asset('backoffice/assets/js/bootstrap.min.js')) }}"></script>
		<script src="{{ absolute_url(asset('backoffice/assets/plugins/slimscroll/jquery.slimscroll.min.js')) }}"></script>
		<script src="{{ absolute_url(asset('backoffice/assets/js/script.js')) }}"></script>
	{% endblock %}
</body>

</html>